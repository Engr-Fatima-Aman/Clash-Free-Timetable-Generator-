@model dsa_project.Models.Class

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">üè´ Add New Class Section</h3>
        </div>
        <div class="card-body p-4">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="AddClass" method="post">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label font-weight-bold">Department / Degree Name:</label>
                        <input name="Name" class="form-control form-control-lg" placeholder="e.g. BSCS, BBA, BEE" required />
                        <small class="text-muted">Enter the base name of the degree.</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label font-weight-bold">Semester:</label>
                        <select name="Semester" class="form-select form-control-lg">
                            @for (int i = 1; i <= 8; i++)
                            {
                                <option value="@i">Semester @i</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label font-weight-bold">Section:</label>
                        <select name="Section" class="form-select form-control-lg">
                            <option value="A">Section A</option>
                            <option value="B">Section B</option>
                            <option value="C">Section C</option>
                            <option value="D">Section D</option>
                        </select>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label font-weight-bold">Total Students in Section:</label>
                        <input name="TotalStudents" type="number" class="form-control" placeholder="e.g. 50" required />
                    </div>

                    <div class="col-md-12 mb-4">
                        <label class="form-label font-weight-bold">Course IDs (semicolon or comma separated):</label>
                        @* Yahan name="courseIdsInput" hona lazmi hai *@
                        <input name="courseIdsInput" class="form-control" placeholder="e.g. 1; 2; 5" required />
                        <small class="text-info">Check 'Manage Data' to see Course IDs. Use ; to separate them.</small>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow">‚úÖ Save Class Section</button>
                    <a href="/Timetable/Index" class="btn btn-outline-secondary">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>