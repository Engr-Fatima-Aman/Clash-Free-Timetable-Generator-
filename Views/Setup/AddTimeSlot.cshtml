@model dsa_project.Models.TimeSlot
<div class="container mt-5">
    <h2>Add Time Slot</h2>
    @if(ViewBag.Message != null){ <div class="alert alert-success">@ViewBag.Message</div> }
    <form method="post">
        <label>Day:</label> <input asp-for="Day" class="form-control" required />
        <label>Start Time:</label> <input asp-for="StartTime" type="time" class="form-control" required />
        <label>End Time:</label> <input asp-for="EndTime" type="time" class="form-control" required />
        <button class="btn btn-success mt-2">Save</button>
        <a href="/Timetable/Index" class="btn btn-secondary mt-2">Back</a>
    </form>
</div>