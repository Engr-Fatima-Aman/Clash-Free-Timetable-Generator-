@model dsa_project.Models.Course

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">ðŸ“š Add New Course</h3>
        </div>
        <div class="card-body p-4">
            @if(ViewBag.Message != null)
            { 
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            }
            
            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Course Title:</label> 
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g. Data Structures & Algorithms" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Credit Hours:</label> 
                    <input asp-for="CreditHours" type="number" class="form-control" placeholder="e.g. 3" required />
                    <small class="text-muted">Theory courses are usually 3 credits (divided into 2h + 1h slots).</small>
                </div>

                <div class="form-check form-switch mb-4">
                    <input type="checkbox" asp-for="IsLab" class="form-check-input" id="labCheckbox" style="transform: scale(1.2);" />
                    <label class="form-check-label ms-2 fw-bold" for="labCheckbox">
                        Is this a Laboratory Course?
                    </label>
                    <div class="text-info small">If checked, scheduler will allot a 3-hour continuous slot in a Lab room.</div>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-primary btn-lg shadow">âœ… Save Course</button>
                    <a href="/Setup/Manage" class="btn btn-outline-secondary">Back to Manage</a>
                </div>
            </form>
        </div>
    </div>
</div>