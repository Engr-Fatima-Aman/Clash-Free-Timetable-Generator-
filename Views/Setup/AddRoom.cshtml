@model dsa_project.Models.Room
<div class="container mt-5">
    <h2>Add Room</h2>
    @if(ViewBag.Message != null){ <div class="alert alert-success">@ViewBag.Message</div> }
    <form method="post">
        <label>Room Number:</label> <input asp-for="RoomNumber" class="form-control" required />
        <label>Capacity:</label> <input asp-for="Capacity" type="number" class="form-control" required />
        <button class="btn btn-success mt-2">Save</button>
        <a href="/Timetable/Index" class="btn btn-secondary mt-2">Back</a>
    </form>
</div>