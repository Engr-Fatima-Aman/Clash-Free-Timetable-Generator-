@model dsa_project.Models.Teacher

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">üë®‚Äçüè´ Add New Teacher</h3>
        </div>
        <div class="card-body p-4">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="AddTeacher" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Full Name:</label>
                    <input name="Name" class="form-control form-control-lg" placeholder="e.g. Dr. Ali Ahmed" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Faculty Type:</label>
                    <select name="TeacherType" id="FacultyType" class="form-select form-control-lg" onchange="toggleSlots()">
                        <option value="Permanent">Permanent (Full-Time)</option>
                        <option value="Visiting">Visiting (Part-Time)</option>
                    </select>
                </div>
                
                <div id="SlotSection" class="alert alert-info" style="display:none;">
                    <small>Note: For Visiting faculty, ensure courses are assigned only on their available days.</small>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Assigned Course IDs:</label>
                    <input name="AssignedCoursesStr" class="form-control" placeholder="e.g. 1, 2, 5" required />
                    <small class="text-muted">Enter IDs of courses this teacher will teach (separated by commas).</small>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow">‚úÖ Save Teacher Info</button>
                    <a href="/Setup/Manage" class="btn btn-outline-secondary">Back to Manage</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function toggleSlots() {
        var type = document.getElementById("FacultyType").value;
        var section = document.getElementById("SlotSection");
        section.style.display = (type === "Visiting") ? "block" : "none";
    }
</script>