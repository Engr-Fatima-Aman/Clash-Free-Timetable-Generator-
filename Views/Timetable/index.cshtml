@{
    ViewData["Title"] = "Timetable Generator";
}

<div class="text-center" style="padding-top: 50px;">
    <h1 class="display-4">Timetable Generator</h1>
    <p class="lead">Automatic conflict-free scheduling using Backtracking Algorithm.</p>
    
    @if(ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="mt-5 mb-4">
        <h3>Step 1: Setup Data</h3>
        
        <div class="mb-3">
             <a href="/Setup/AutoGenerateSlots" class="btn btn-warning btn-lg shadow-sm" onclick="return confirm('This will generate standard slots (Mon-Fri, 8-4). Proceed?');">
                ⚡ Auto-Generate Time Slots (Mon-Fri 8-4)
             </a>
        </div>

        <p class="text-muted">Or add data manually:</p>
        
        <div class="btn-group flex-wrap" role="group">
            <a href="/Setup/AddCourse" class="btn btn-outline-primary m-1">1. Add Course</a>
            <a href="/Setup/AddRoom" class="btn btn-outline-primary m-1">2. Add Room</a>
            <a href="/Setup/AddTeacher" class="btn btn-outline-primary m-1">3. Add Teacher</a>
            <a href="/Setup/AddClass" class="btn btn-outline-primary m-1">4. Add Class</a>
            </div>

        <div class="mt-3" style="max-width: 600px; margin: 0 auto;">
            <a href="/Setup/Manage" class="btn btn-dark btn-lg w-100">⚙️ Manage Existing Data (Edit/Delete)</a>
        </div>
    </div>

    <hr />

    <div class="card mt-4" style="width: 22rem; margin: 0 auto; border-color: #28a745;">
        <div class="card-body">
            <h5 class="card-title text-success">Step 2: Generate</h5>
            <p class="card-text">Once you have added all data, click below.</p>
            
            <form asp-action="Generate" asp-controller="Timetable" method="post">
                <button type="submit" class="btn btn-success btn-lg btn-block">Generate Timetable</button>
            </form>
        </div>
    </div>
    
    <div class="mt-5">
        <a href="/Setup/ResetData" class="btn btn-outline-danger btn-sm" onclick="return confirm('WARNING: This will delete ALL saved data. Are you sure?');">
            Reset / Clear All Data
        </a>
    </div>
</div>